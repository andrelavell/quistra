---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Page Not Found - Quistra" description="The page you are looking for could not be found." canonical="/404">
  <Header />

  <main class="container mx-auto px-4 py-16">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
      <p class="text-sm font-medium text-coral-600">404 error</p>
      <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900">Page not found</h1>
      <p class="mt-3 text-gray-600">Sorry, we couldn’t find the page you’re looking for. It may have been moved or deleted.</p>

      <div class="mt-8 flex items-center justify-center gap-3">
        <a href="/" class="btn-primary">Go back home</a>
        <a href="/questions/" class="btn-secondary">Browse questions</a>
      </div>

      <div class="mt-8">
        <form action="/search" method="GET" class="max-w-md mx-auto">
          <label for="q" class="sr-only">Search</label>
          <input id="q" name="q" type="text" placeholder="Search questions..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-coral-500" />
        </form>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
