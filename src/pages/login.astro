---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Sign In - Quistra" description="Sign in to your Quistra account.">
  <Header />
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Sign In</h1>
      <form class="space-y-5" onsubmit="event.preventDefault(); alert('Demo only: sign-in is not implemented.');">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input id="email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-coral-500 focus:border-transparent" required />
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input id="password" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-coral-500 focus:border-transparent" required />
        </div>
        <div class="flex items-center justify-between">
          <label class="inline-flex items-center text-sm text-gray-600">
            <input type="checkbox" class="rounded border-gray-300 text-coral-500 focus:ring-coral-500 mr-2" />
            Remember me
          </label>
          <a href="#" class="text-sm text-coral-600 hover:text-coral-700">Forgot password?</a>
        </div>
        <button type="submit" class="w-full btn-primary">Sign In</button>
        <p class="text-sm text-gray-600 text-center">Don't have an account? <a href="/signup" class="text-coral-600 hover:text-coral-700">Sign Up</a></p>
      </form>
    </div>
  </main>
  <Footer />
</BaseLayout>
