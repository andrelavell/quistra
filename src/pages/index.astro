---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import QuestionCard from '../components/QuestionCard.astro';
import Sidebar from '../components/Sidebar.astro';
import { questions } from '../data/questions.js';

// Get latest questions for homepage
const latestQuestions = questions.slice(0, 8);
---

<BaseLayout title="Quistra - Questions & Answers Community" description="Join our community-driven Q&A platform. Ask questions, share knowledge, and connect with experts in various fields.">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-coral-500 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Ask Questions, Get Answers
      </h1>
      <p class="text-xl text-coral-100 mb-8 max-w-3xl mx-auto">
        Join our community to ask questions and share knowledge on topics ranging from technology and lifestyle to career advice and personal development.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/ask" class="bg-white text-coral-500 px-8 py-3 rounded-md font-semibold hover:bg-gray-50 transition-colors">
          Ask Question
        </a>
        <a href="/questions" class="border-2 border-white text-white px-8 py-3 rounded-md font-semibold hover:bg-white hover:text-coral-500 transition-colors">
          Browse Questions
        </a>
      </div>
    </div>
  </section>

  <!-- Search Section -->
  <section class="bg-white py-8 border-b border-gray-200">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <div class="relative">
          <input 
            type="search" 
            placeholder="Ask any question and get the best answer..." 
            class="w-full px-6 py-4 text-lg border-2 border-gray-300 rounded-lg focus:outline-none focus:border-coral-500 pr-16"
          >
          <button class="absolute right-2 top-2 bg-coral-500 text-white px-6 py-2 rounded-md hover:bg-coral-600 transition-colors">
            Search
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Questions List -->
      <div class="flex-1">
        <!-- Filter Tabs -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
          <div class="flex border-b border-gray-200">
            <button class="px-6 py-3 text-sm font-medium text-white bg-coral-500 rounded-tl-lg">
              Most Recent
            </button>
            <button class="px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors">
              Most Answered
            </button>
            <button class="px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors">
              No Answers
            </button>
          </div>
        </div>

        <!-- Questions -->
        <div class="space-y-4">
          {latestQuestions.map(question => (
            <QuestionCard question={question} />
          ))}
        </div>

        <!-- Load More -->
        <div class="text-center mt-8">
          <button class="bg-coral-500 text-white px-8 py-3 rounded-md font-medium hover:bg-coral-600 transition-colors">
            Load More Questions
          </button>
        </div>
      </div>

      <!-- Sidebar -->
      <Sidebar />
    </div>
  </main>

  <Footer />
</BaseLayout>
