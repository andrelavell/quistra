---
// Header component
---

<header class="bg-gray-800 text-white">
  <!-- Top coral bar -->
  <div class="bg-coral-500 h-1"></div>
  
  <!-- Main header -->
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo and brand -->
      <div class="flex items-center space-x-8">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-coral-500 rounded-full flex items-center justify-center">
            <span class="text-white font-bold text-lg">?</span>
          </div>
          <span class="text-xl font-bold">Quistra</span>
        </a>
        
        <!-- Navigation -->
        <nav class="hidden md:flex space-x-6">
          <a href="/" class="hover:text-coral-300 transition-colors">Home</a>
          <a href="/questions/" class="hover:text-coral-300 transition-colors">Questions</a>
          <a href="/category/health/" class="hover:text-coral-300 transition-colors">Health</a>
          <a href="/contact" class="hover:text-coral-300 transition-colors">Contact Us</a>
        </nav>
      </div>
      
      <!-- Search and user actions -->
      <div class="flex items-center space-x-4">
        <!-- Search bar -->
        <div class="hidden md:block">
          <div class="relative">
            <input 
              type="search" 
              placeholder="Search questions..." 
              class="bg-gray-700 text-white placeholder-gray-400 px-4 py-2 pr-10 rounded-md w-64 focus:outline-none focus:ring-2 focus:ring-coral-500"
            >
            <svg class="absolute right-3 top-2.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
        
        <!-- User actions -->
        <div class="flex items-center space-x-2">
          <a href="/login" class="btn-primary text-sm">Sign In</a>
          <a href="/signup" class="btn-secondary text-sm">Sign Up</a>
        </div>
      </div>
    </div>
  </div>
</header>
